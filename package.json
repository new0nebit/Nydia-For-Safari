  "description": "Safari extension for decentralized passkey storage on the Sia network.",
  "author": "Oleh N.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/new0nebit/Nydia-For-Safari.git"
  },
  "keywords": [
    "passkey",
    "webauthn",
    "safari-extension",
    "sia-network",
    "decentralized-storage",
    "authenticator",
    "security"
